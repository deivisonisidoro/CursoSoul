{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
    {{else}}
{{/each}}
<form action="./nova" method="POST">
    <div class="card">
        <h2>Nova Atividade</h2>
        <div class="card-body">
            <label for="titulo">Titulo</label>        
                <input type="text" name="titulo" id="titulo" class="form-control">
            <label for="conteudo">Conteudo</label>        
            <textarea name="conteudo" id="conteudo" cols="30" rows="10" class="form-control"></textarea>
            <label for="dificuldadesAtv">Tipo de dificuldades</label>
                <select name="dificuldadesAtv" class="custom-select">
                 
                    <option value= "0">Aluno sem deficiencia</option>
                    <option value="1">nivel 1</option>
                    <option value="2">nivel 2</option>
                    <option value="3">nivel 3</option>    
                    
                </select>
                <br>
            <button type="submit" class="btn btn-dark mt-2">Enviar relatorio</button>   
        </div>
        
    </div>
</form>