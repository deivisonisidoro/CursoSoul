{{#each erro}}
    <div class="alert alert-danger">{{texto}}</div>
    {{else}}
{{/each}}
<h3>Editar aluno</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/aluno/edit" method="POST">
            <input type="hidden" name="id" value="{{aluno.id}}">
            <label for="nome">Nome:</label>
                <input type="text" name="nome" id="nome" placeholder="Nome do aluno" class="form-control" value="{{aluno.nome}}">
            
            <label for="cpf">Cpf:</label>
                <input type="text" name="cpf" id="cpf" placeholder="Cpf do aluno" class="form-control" value="{{aluno.cpf}}">
            
            <label for="endereco">Endereco:</label>
                <input type="text" name="endereco" id="endereco" placeholder="Endereco do aluno" class="form-control" value="{{aluno.endereco}}">

            <label for="telefone">Telefone:</label>
               <input type="tel" name="telefone" id="telefone" placeholder="Telefone do aluno" class="form-control" value="{{aluno.telefone}}">
            
            <label for="turma">Turma:</label>
                <input type="text" name="turma" id="turma" placeholder="Turma do aluno" class="form-control" value="{{aluno.turma}}">
            
            <label for="email">Email:</label>
                <input type="email" name="email" id="email" placeholder="email do aluno" class="form-control" value="{{aluno.email}}">
        
            <label for="senha">Senha:</label>
                    <input type="password" name="senha" id="senha" placeholder="Criando senha" class="form-control" value="{{aluno.senha}}">
            
            <label for="senha2">Repita a sua senha:</label>
                    <input type="password" name="senha2" id="senha2" placeholder="Digite a senha novamente" class="form-control" value="{{aluno.senha}}" >
            
            <label for="horario">Horario:</label>
                    <select name="horario" id="horario" class="form-control" value="{{aluno.horario}}">
                        
                    <option value= "12:00">12:00</option>
                    <option value="13:00">13:00</option>
                    <option value="14:00">14:00</option>
                    <option value="15:00">15:00</option>    
                    
                    </select>

           
            <label for="responsavel">Responsavel:</label>
                    <input type="text" name="responavel" id="responsavel" placeholder="Nomme do responsavel do aluno" class="form-control" value="{{aluno.respon}}">
            
            <br>
            <button type="submit" class="btn btn-dark">Editar aluno</button>
        </form>
    </div>
</div>